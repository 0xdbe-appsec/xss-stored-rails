<h1>My awesome bookmarks</h1>

<ul>
  <% @Bookmarks.each do |bookmark| %>
    <li>
        <a href="<%= u bookmark.link %>" style="color: <%= bookmark.color %>;">
          <%= bookmark.title %>
        </a> |
        <%= link_to "Details", bookmark_path(bookmark) %>
    </li>
  <% end %>
</ul>

<br>

<%= link_to "Add bookmarks", new_bookmark_path %>